// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "command_palette::Toggle"
      "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && showing_completions",
    "use_key_equivalents": true,
    "bindings": {
      // "enter": "editor::ConfirmCompletion",
      // "shift-enter": "editor::ConfirmCompletionReplace",
      "tab": "editor::Tab",
      "alt-tab": "editor::ComposeCompletion"
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "tab": "editor::Tab",
      "alt-tab": "editor::AcceptEditPrediction"
      // "ctrl-cmd-right": "editor::AcceptPartialEditPrediction"
    }
  },
  {
    "context": "Picker > Editor",
    "use_key_equivalents": true,
    "bindings": {
      // "escape": "menu::Cancel",
      // "up": "menu::SelectPrevious",
      // "down": "menu::SelectNext",
      "tab": "editor::Tab",
      "alt-tab": "picker::ConfirmCompletion"
      // "alt-enter": ["picker::ConfirmInput", { "secondary": false }],
      // "cmd-alt-enter": ["picker::ConfirmInput", { "secondary": true }]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-y": "editor::DeleteLine",
      "cmd-d": "editor::DuplicateLineDown",
      "cmd-[": "pane::GoBack",
      "cmd-]": "pane::GoForward",
      "alt-shift-up": "editor::MoveLineUp",
      "alt-shift-down": "editor::MoveLineDown",
      "cmd-shift-up": "editor::MoveLineUp",
      "cmd-shift-down": "editor::MoveLineDown"
    }
  }
]
